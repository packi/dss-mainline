<?xml version="1.0"?>
<subscriptions version="1">
  <subscription event-name="turnOn" handler-name="bus_handler">
    <send type="turnOn" />
  </subscription>
  <subscription event-name="turnOff" handler-name="bus_handler">
    <send type="turnOff" />
  </subscription>
  <subscription event-name="brighter" handler-name="bus_handler">
    <send type="increaseValue" />
  </subscription>
  <subscription event-name="bell" handler-name="raise_event">
    <parameter>
      <parameter name="event_name">blink</parameter>
    </parameter>
  </subscription>
  <subscription event-name="blink" handler-name="raise_event">
    <parameter>
      <parameter name="event_name">turnOn</parameter>
      <parameter name="location">.yellow</parameter>
    </parameter>
  </subscription>
  <subscription event-name="blink" handler-name="raise_event">
    <parameter>
      <parameter name="event_name">turnOff</parameter>
      <parameter name="time">+10</parameter>
      <parameter name="location">.yellow</parameter>
    </parameter>
  </subscription>
  <subscription event-name="darker" handler-name="bus_handler">
    <send type="decreaseValue" />
  </subscription>
</subscriptions> 
