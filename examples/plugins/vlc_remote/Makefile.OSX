

all:	vlc_remote.so install

vlc_remote.so:	vlc_remote.o
	g++ -lPocoNet -dynamiclib -undefined dynamic_lookup -single_module -o vlc_remote.so *.o
vlc_remote.o:	vlc_remote.cpp ../../../core/sim/plugin/pluginbase.cpp ../../../core/sim/plugin/pluginmedia.cpp
	g++ -g3 -O0 -Wall -fPIC -c vlc_remote.cpp ../../../core/sim/plugin/pluginbase.cpp ../../../core/sim/plugin/pluginmedia.cpp

install:	vlc_remote.so
	cp vlc_remote.so ../../../data/plugins/
